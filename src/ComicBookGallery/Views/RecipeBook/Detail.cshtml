@{
    Layout = null;
    

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
    <h1>@ViewBag.RecipeTitle</h1>
    <h2>Recipe ID : #@ViewBag.RecipieId</h2>

    <h5>Description</h5>
    <div>@Html.Raw(ViewBag.Description)</div>

        @if (ViewBag.RecipeInfo.Length > 0)
        {
            <h5>Recipe Info</h5>
            <div>
                <ul>
                    @foreach (var info in ViewBag.RecipeInfo)
                    {
                        <li>@info</li>

                    }
                </ul>
            </div>
        }

    




    </div>
</body>
</html>
